<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_59"
    tools:context=".Register.RegisterSuccess">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록 성공!"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간 등록 후 노출됩니다."
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_marginTop="200dp"
        android:id="@+id/go_product"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:drawableTop="@drawable/ic_baseline_access_alarms_24"
        android:text="시간등록"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/go_back5"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_marginTop="200dp"
        android:id="@+id/go_back5"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:drawableTop="@drawable/ic_baseline_logout_24"
        android:text="메인으로"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/go_product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>