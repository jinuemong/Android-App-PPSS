<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_59"
    android:orientation="vertical"
    tools:context=".Reserve.Reservation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200">

        <Button
            android:id="@+id/go_back8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="주차장 예약하기"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="15dp"
            android:text="주차장 정보"
            android:id="@+id/text55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/booking_park_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="주차장 이름"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/booking_park_num"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text55" />

        <TextView
            android:text="0 / 0"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:id="@+id/booking_park_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text55"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/booking_park_name"
            />
        <TextView
            android:text="0코인"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:id="@+id/booking_park_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text55"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/booking_park_num"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="15dp"
            android:text="주차장 운영 시간"
            android:id="@+id/text555"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="00:00"
            android:layout_marginEnd="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/booking_text1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text555" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/booking_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text=" ~ "
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/start_time"
            app:layout_constraintEnd_toStartOf="@+id/end_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text555" />
        <TextView
            android:text="24:00"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text555"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/booking_text1"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="15dp"
            android:text="이용 시간 설정"
            android:id="@+id/text5555"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/text55555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="총 이용 시간: "
            android:layout_marginEnd="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/booking_hour"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text5555" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/booking_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/text55555"
            app:layout_constraintEnd_toStartOf="@+id/booking_hour_text"
            app:layout_constraintTop_toBottomOf="@+id/text5555" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/booking_hour_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 시간"
            android:layout_marginEnd="20dp"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/booking_hour"
            app:layout_constraintEnd_toStartOf="@+id/booking_min"
            app:layout_constraintTop_toBottomOf="@+id/text5555" />
        <TextView
            android:text="10"
            android:textSize="20sp"
            android:id="@+id/booking_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text5555"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@+id/booking_min_text"
            app:layout_constraintStart_toEndOf="@+id/booking_hour_text"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/booking_min_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 분"
            android:layout_marginEnd="20dp"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/booking_min"
            app:layout_constraintTop_toBottomOf="@+id/text5555" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/plus_1hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*결제 시 여유 시간 10분이 추가 됩니다."/>
        <Button
            android:layout_marginStart="30dp"
            android:id="@+id/plus_1hour"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:text="+1시간"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <Button
            android:layout_marginStart="30dp"
            android:id="@+id/plus_5hour"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:text="+5시간"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/plus_1hour"
            app:layout_constraintBottom_toBottomOf="parent" />
        <Button
            android:layout_marginStart="30dp"
            android:id="@+id/plus_30min"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:text="+30분"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/plus_5hour"
            app:layout_constraintBottom_toBottomOf="parent" />
        <Button
            android:layout_marginStart="30dp"
            android:id="@+id/reset_time"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:text="초기화"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/plus_30min"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="15dp"
            android:text="차량 정보"
            android:id="@+id/text55555555"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="차량 번호"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/car_number_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text55555555" />

        <TextView
            android:text="@string/u_string_3"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:id="@+id/car_number_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text55555555"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/car_number"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="#D7C7ED">
        <TextView
            android:id="@+id/text5555555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="최종 결제 코인: "
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/total_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="00코인(0000원)"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/text5555555"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text555555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="사용 가능 코인: "
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text5555555" />
        <TextView
            android:id="@+id/total_my_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="00코인"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/text555555"
            app:layout_constraintTop_toBottomOf="@+id/total_coin"/>
        <Button
            android:id="@+id/reservation_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:text="구매하기"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
