<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="주차공간 공유하기"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@color/purple_200"/>
        <Button
            android:id="@+id/go_back1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_background"
            android:drawableTop="@drawable/ic_baseline_logout_24"
            android:text="메인으로"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:background="@color/purple_59"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_baseline_storefront_24" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_baseline_monetization_on_24" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/purple_59"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비어있는 주차공간을 공유하세요"
            android:textColor="#338E9A"
            android:textSize="28sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="주택, 빌라, 매장 등 개인이 소유한 주차공간을"/>
        <TextView
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="다른 사람에게 공유할 수 있습니다."/>
        <Button
            android:id="@+id/share_button"
            android:background="@drawable/button_background"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="주차공간 공유 등록하기"
            android:textSize="25sp"/>
    </LinearLayout>


</LinearLayout>