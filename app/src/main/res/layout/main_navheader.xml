<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navheader"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@color/purple_200">

    <ImageView

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/userImage"
        android:src="@drawable/ic_my"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="13dp"
        android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/userNameText" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="26dp"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/userImage"
        android:textColor="#fff"/>
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userEmailText" android:textSize="10sp"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/userNameText"
        android:layout_marginStart="26dp" app:layout_constraintStart_toStartOf="parent" android:textColor="#fff"/>
</androidx.constraintlayout.widget.ConstraintLayout>